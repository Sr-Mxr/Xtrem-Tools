#!/bin/bash

# Función para mostrar el banner
mostrar_banner() {
    echo -e "\e[1;50m"
    echo "************************************"
    echo "*          Xtrem-Tools             *"
    echo "************************************"
    echo -e "\e[0m"
}

# Función para mostrar el menú
mostrar_menu() {
    clear
    mostrar_banner
    echo "Elige la opción que quieres usar:"
    echo "1- Scan"
    echo "2- Hydra"
    echo "3- Recon"
    echo "4- Openvas"
    echo "5- Fuzzing"
    echo "6- Actualizar"    
    read -p "¿Cuál deseas usar? " opcion

    case $opcion in
        1) curl -O https://raw.githubusercontent.com/Sr-Mxr/scan/master/scan.sh && /bin/bash scan.sh ;;  
        2) curl -O https://raw.githubusercontent.com/Sr-Mxr/BreakPass/master/hydra.sh && /bin/bash hydra.sh ;;  
        3) curl -O https://raw.githubusercontent.com/Sr-Mxr/recon/master/recon.sh && /bin/bash recon.sh ;;  
        4) curl -O https://raw.githubusercontent.com/Sr-Mxr/openvas/master/openvas.sh && /bin/bash openvas.sh ;;  
        5) curl -O https://raw.githubusercontent.com/Sr-Mxr/fuzzing/master/fuzzing.sh && /bin/bash fuzzing.sh ;; 
        6) git pull origin main ;;
        *) echo "Opción no válida";;
    esac
}

# Llamada a la función del menú
mostrar_menu

